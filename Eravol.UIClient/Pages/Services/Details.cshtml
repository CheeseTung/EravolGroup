@page
@using Eravol.WebApi.Data.Models;
@using Eravol.WebApi.ViewModels.Services.Public;
@model Eravol.UIClient.Pages.Services.DetailsModel

@{
    ServiceViewModel? service = Model.service;
    List<ServiceImage>? serviceImages = Model.serviceImages;
}

<!--Inner Home Banner Start-->
<div class="wt-haslayout wt-innerbannerholder wt-innerbannerholdervtwo">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-xs-12 col-sm-12 col-md-8 push-md-2 col-lg-6 push-lg-3">
            </div>
        </div>
    </div>
</div>
<!--Inner Home End-->

<!--Main Start-->
<main id="wt-main" class="wt-main wt-haslayout wt-innerbgcolor mt-5">
    <!-- User Profile Start-->
    <div class="wt-main-section wt-paddingtopnull wt-haslayout">

        <div class="container">
            <div class="row">

                <div class="col-12 col-sm-12 col-md-12 col-lg-12 float-left">

                    <div class="wt-userprofileholder">
                        
                        <span class="wt-featuredtag"><img src="~/images/featured.png" alt="img description" data-tipso="Plus Member" class="template-content tipso_style"></span>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-3 float-left">
                            <div class="row">
                                <div class="wt-userprofile">
                                    <figure>
                                        <img src=@($"https://localhost:7259/api/Images/serviceBanner/{service.ServiceCode}") alt="img description">
                                        <div class="wt-userdropdown wt-online">
                                        </div>
                                    </figure>
                                    <div class="wt-title">
                                        <p>Code:  @service.ServiceCode</p>
                                        <span>Status:  @service.ServiceStatusName <br>Clients: @service.TotalClients <br><a href="javascript:void(0);"><p>Freelancer:  @service.ServiceAuthor</p></a></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-9 float-left">
                            <div class="row">
                                <div class="wt-proposalhead wt-userdetails">
                                    <h2>@service.ServiceTitle</h2>
                                    <ul class="wt-userlisting-breadcrumb wt-userlisting-breadcrumbvtwo">
                                        <li><span><i class="far fa-money-bill-alt"></i> @service.Price @Model.PriceType</span></li>
                                        <li>
                                            <span>
                                                <img src=@($"https://localhost:7259/api/Images/{service.CategoryImage}") alt="img description" style="width:16px">
                                                @service.CategoryName
                                            </span>
                                        </li>
                                           
                                        <li><a href="javascript:void(0);" class="wt-clicksave"><i class="fa fa-heart"></i> Save</a></li>
                                    </ul>

                                    <div class="wt-description">
                                        @Html.Raw(service.ServiceDetails)
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- User Profile End-->
        <!-- User Listing Start-->
        <div class="container">
            <div class="row">
                <div id="wt-twocolumns" class="wt-twocolumns wt-haslayout">
